{
  "name": "Dinorss",
  "version": "0.2.19",
  "description": "Dinosaur Rss ðŸ¦•",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build": "rollup -c",
    "autobuild": "rollup -c -w",
    "dev:win": "concurrently \"yarn run autobuild\" \"set ELECTRON_RELOAD=yes && electron .\"",
    "dev:mac": "concurrently \"yarn run autobuild\" \"ELECTRON_RELOAD=yes electron .\"",
    "pack": "electron-builder --dir",
    "dist:win": "git checkout src & rollup -c & electron-builder --win --x64",
    "dist:mac:x64": "git checkout src;  rollup -c;  electron-builder --mac --x64",
    "dist:mac:arm64": "git checkout src;  rollup -c;  electron-builder --mac --arm64"
  },
  "repository": "https://github.com/richshaw2015/dino-rss-electron",
  "keywords": [
    "Dinosaur",
    "RSS",
    "reader",
    "news"
  ],
  "author": "Richshaw",
  "license": "MIT",
  "build": {
    "publish": {
      "provider": "github",
      "owner": "richshaw2015",
      "repo": "dino-rss-electron"
    },
    "appId": "org.dinorss",
    "productName": "Dinosaur Rss",
    "artifactName": "${productName}.${version}.${ext}",
    "files": [
      "!public/*.map",
      "!public/podplayer/**/report.html",
      "!rollup.config.js",
      "!.vscode/*",
      "!build/*",
      "!src/**/*",
      "!.storybook/*",
      "!node_modules/**/*.md",
      "!node_modules/**/LICENSE",
      "!node_modules/**/mousetrap.min.js",
      "!node_modules/**/*.js.map"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/logo.png"
    },
    "mac": {
      "icon": "build/macOS.icns",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.inherit.plist",
      "type": "distribution",
      "category": "public.app-category.news",
      "target": [
        "dmg"
      ],
      "extendInfo": {}
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "deleteAppDataOnUninstall": true,
      "allowToChangeInstallationDirectory": true
    },
    "dmg": {},
    "electronDownload": {
      "mirror": "https://npm.taobao.org/mirrors/electron/"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@podlove/web-player": "^5.2.3",
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-replace": "^2.4.1",
    "autolinker": "^3.14.2",
    "concurrently": "^5.3.0",
    "electron": "11.3.0",
    "electron-builder": "^22.10.4",
    "electron-devtools-installer": "^3.1.1",
    "electron-reload": "^1.5.0",
    "fsevents": "^2.2.1",
    "highlight.js": "^10.3.1",
    "materialize-css": "^1.0.0",
    "prismjs": "^1.22.0",
    "qrcodejs": "^1.0.0",
    "rollup": "^2.27.1",
    "rollup-plugin-svelte": "^6.1.1",
    "rollup-plugin-terser": "^5.1.2",
    "svelte": "^3.29.7",
    "svelte-loader": "^2.13.6",
    "telnet-client": "^1.4.6"
  },
  "dependencies": {
    "get-folder-size": "^2.0.1",
    "md5": "^2.3.0",
    "mousetrap": "^1.6.5",
    "uuid": "^8.3.1"
  }
}
